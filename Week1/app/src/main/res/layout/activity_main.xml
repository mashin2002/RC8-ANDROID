<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/bell"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:iconifiedByDefault="false"
        app:queryHint="쿠팡에서 검색하세요!"
        android:background="@drawable/searchview_bg"
        android:layout_marginTop="2dp"
        />
    <ImageView
        android:src="@drawable/page_viewer"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginRight="7dp"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_marginLeft="7dp"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon1">
        </ImageView>

        <ImageView
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon2" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon3" />

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon4"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="로켓배송"
            android:layout_marginRight="7dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#151515"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:textSize="16dp"
            android:text="로켓프레시"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="#151515"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="로켓직구"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#151515"
            android:gravity="center"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="쿠팡라이브"
            android:textColor="#151515"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="바로가기"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="#31B4DD"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13dp"
            android:text="바로가기"
            android:textStyle="bold"
            android:textColor="#31B4DD"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="바로가기"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="#31B4DD"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="바로가기"
            android:textColor="#31B4DD"
            android:textSize="13dp"
            android:textStyle="bold" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >

            <Button
                android:layout_weight="1"
                android:id="@+id/yellow_btn"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_yellow"
                android:gravity="left|center_vertical"
                android:text="\n\t\t\t난방기 50% 할인중"
                android:textColor="#040303"
                android:textSize="17dp"
                android:textStyle="bold" />
            <Button
                android:layout_weight="1"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:background="@drawable/rounded_blue"
                android:text="\n\t\t\t일주일 무료 체험"
                android:gravity="left|center_vertical"
                android:textColor="#00A2D7"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/dyson_logo"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="8dp"
            />
        <ImageView
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:src="@drawable/coupangplay"
            android:layout_gravity="right"
            android:layout_marginRight="45dp"
            android:layout_marginTop="10dp"
            />
    </FrameLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yellow_btn"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 쇼핑 추천"

            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <GridLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="2">

        <ImageView
            android:id="@+id/recommend1"
            android:src="@drawable/recommend1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon1"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="라이틀리 매콤해물곤약볶음밥 200g"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toRightOf="@id/logo" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/sale_per"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35%"
                    android:textColor="#F7552F"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cost1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="￦ 2,400"
                    android:textColor="#C4C4C4"
                    app:layout_constraintLeft_toRightOf="@+id/sale_per" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/price_font"
                android:layout_marginLeft="10dp"
                android:text="￦ 1,900"
                android:textColor="#31B4DD"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="@drawable/rounded_gray"
                    android:text="# 180칼로리"
                    android:textColor="#787878"
                    android:textSize="12dp"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="@drawable/rounded_gray"
                    android:text="#슈퍼곡물퀴노아"
                    android:textColor="#787878"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_marginTop="5dp"
            android:src="@drawable/recommend2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/logo2"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon1"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="맥스탑 싱글/더블 모니터암"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@id/logo2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/sale_per2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50%"
                    android:textColor="#F7552F"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cost2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="￦ 40,500"
                    android:textColor="#C4C4C4"
                    app:layout_constraintLeft_toRightOf="@+id/sale_per2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/price_font"
                android:textStyle="bold"
                android:text="￦ 20,250"
                android:layout_marginLeft="10dp"
                android:textColor="#31B4DD"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="@drawable/rounded_gray"
                    android:text="# 맥북"
                    android:textColor="#787878"
                    android:layout_marginRight="10dp"
                    android:textSize="12dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="@drawable/rounded_gray"
                    android:text="# 파격세일"
                    android:textColor="#787878"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
    </GridLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nav_bg"
        android:id="@+id/bottom_navigation"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@drawable/menu_selector_color"
        app:itemTextColor="@drawable/menu_selector_text"
        app:itemBackground="@drawable/item_bg"
        />
</LinearLayout>
